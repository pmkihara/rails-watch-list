<%= render "shared/modal", modal_width: "modal-md-width" do %>
  <h3 class="modal-title">Add movies</h3>
  <%= simple_form_for [@list, @bookmark], html: { class: "mt-3", data: { turbo: true } } do |f| %>
    <%= f.association :movie,
                      label: false,
                      prompt: 'Movie',
                      collection: Movie.all.order(:title),
                      wrapper_html: { class: "form-list" } %>
    <%= f.input :comment,
                as: :text,
                label: false,
                placeholder: 'Comment',
                wrapper_html: {class: "form-list"} %>
    <div class="text-center">
      <%= f.submit class: "btn-capsule-sm btn-outline-gold mt-2" %>
    </div>
  <% end %>
<% end %>
