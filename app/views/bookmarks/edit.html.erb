<%= turbo_frame_tag "comment" do %>
  <%= simple_form_for @bookmark, html: { class: "mt-3", data: { turbo: true, turbo_frame: 'comment' } } do |f| %>
    <%= f.input :comment,
                as: :text,
                label: false,
                placeholder: "Comment",
                autofocus: true,
                wrapper_html: {class: "inplace-form"} %>
    <%= f.submit class: "btn-capsule-sm btn-outline-gold" %>
  <% end %>
<% end %>
