<div class='banner banner-section' style='background-image: linear-gradient(0deg, rgba(0,0,0,0.75) 25%, rgba(0,0,0,0.7) 100%), url("<%= image_url 'movies.jpg'%>")'>
  <div class='banner-content'>
    <div class='banner-container'>
      <h1><%= @list.name %></h1>
    </div>
  </div>
</div>
<div class='container p-5'>
  <div class='d-flex w-100 justify-content-end'>
    <%= link_to new_list_bookmark_path(list_id: @list), class: 'btn-capsule-sm btn-red' do %>
      <i class='fas fa-plus mr-2'></i>Add a movie
      <% end %>
  </div>
  <% if @list.movies.empty? %>
    <h5 class='text-center p-5'>You have not added any movie yet!</h5>
  <% else %>
    <div class='movies-list'>
      <% @list.movies.each do |movie| %>
        <%= render 'movie', movie: movie %>
      <% end %>
    </div>
  <% end %>
</div>
