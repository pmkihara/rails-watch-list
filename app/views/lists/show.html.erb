<div class="banner banner-section" style="background-image: linear-gradient(0deg, rgba(0,0,0,0.75) 25%, rgba(0,0,0,0.7) 100%), url('<%= image_url 'lists.jpg'%>')">
  <div class="banner-content">
    <div class="banner-container">
      <h1><%= @list.name %></h1>
    </div>
  </div>
</div>
<div class="container">
  <% if @list.movies.empty? %>
    <h5 class="text-center p-5">You still have not added any movie!</h5>
  <% else %>
    <div class="movies-list">
      <% @list.movies.each do |movie| %>
        <%= render 'movie', movie: movie %>
      <% end %>
    </div>
  <% end %>
</div>
