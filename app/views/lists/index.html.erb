<div class='banner banner-section' style='background-image: linear-gradient(0deg, rgba(0,0,0,0.75) 25%, rgba(0,0,0,0.7) 100%), url('<%= image_url 'lists.jpg'%>')'>
  <div class='banner-content'>
    <div class='banner-container'>
      <h1 class='mb-4'>Watch Lists</h1>
      <p class='btn-capsule-sm btn-red d-none' id='inplace-form-btn'><i class='fas fa-plus mr-2'></i>New List</p>
      <%= simple_form_for @list do |f| %>
        <%= f.input :name, label: false, placeholder: 'Enter the name of your new list',  wrapper_html: {class: 'form-list'} %>
      <% end %>
    </div>
  </div>
</div>
<div class='container'>
  <div class='cards'>
    <% if @lists.empty? %>
      <h5>No lists have been created yet! ğŸ˜±</h5>
    <% else %>
      <%= render @lists %>
    <% end %>
  </div>
</div>
